<section class="lookup-wrp border p-5">
    <div class="row">
        <div class="col-md-9">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active text-primary bg-white" id="pills-definitions-tab" data-toggle="pill" href="#pills-definitions" role="tab" aria-controls="pills-definitions" aria-selected="true">Lookup Definitions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-primary bg-white" id="pills-values-tab" data-toggle="pill" href="#pills-values" role="tab" aria-controls="pills-values" aria-selected="false">Lookup Values</a>
                </li>
            </ul>
        </div>
        <div class="col-md-3 text-right">
            <button type="button" class="btn btn-primary btn-sm" @onclick="Controller.AddLookups"><i class="fa fa-plus text-white pr-2"></i>Add New</button>
        </div>
    </div>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-definitions" role="tabpanel" aria-labelledby="pills-definitions-tab">
            <div class="row">
                <div class="col-md-3 px-0 border">
                    <div class="card">
                        <div class="card-header">
                            Lookup  Name
                        </div>
                        <div class="card-body px-0">
                            <ul class="p-0 m-0 list-unstyled">
                                @foreach(LookupDefinition oDef in Definitions) {
                                    <li class="pl-3"><a @onclick="@(()=>DefinitionClick(oDef))">@oDef.LookupName</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <CmpLookupDefinition_Edit Controller="Controller"></CmpLookupDefinition_Edit>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-values" role="tabpanel" aria-labelledby="pills-values-tab">
            <CmpLookup Controller="Controller"></CmpLookup>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <button type="button" class="btn btn-light" @onclick="Controller.CancelLookups">Cancle</button>
            <button type="button" class="btn btn-success" @onclick="Controller.SaveLookups">Save</button>
        </div>
    </div>
</section>

