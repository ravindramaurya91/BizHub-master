<div style="background-color: white">
    <div class="col-md-12">
        <div style="padding-top: 10px;">
            
            <div class="row mb-2">
                <div class="col-md-11 text-left">
                    <h3 class=" pl-0 my-auto" style="color:var(--primary-blue);">Template</h3>
                </div>
                <div class="col-md-1 p-0 text-right">
                    <button class="btn btn-sm btn-transparent" @onclick="BlazoredModal.Cancel">
                        <i class="fa fa-times text-secondary"></i>
                    </button>
                </div>
            </div>
            <hr class="my-2">
                <div class="form-group row">
                    <div class="col-md-6">
                        <label><b>Name</b></label>
                        <div >
                            <input type="text" class="form-control" style="height:34px;" @bind-value="Template.Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label><b>Category</b></label>
                        <div>
                            <FSSelect Items="@CategoryDropDownvalues" BoundValue="@Template.LkpTemplateCategoryOid.ToString()" OnSelect="CategorySelected"></FSSelect>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-form-label"><b>Description</b></label>
                    <div class="col-sm-12">
                        <!--TODO: after thursday play with the styling of the syncfusion multiline text-->
                        @* <SfTextBox CssClass="valid-syncfusion-input" Placeholder="Enter your address" Multiline="true" @bind-value="Template.Description"></SfTextBox> *@
                        <input type="text" class="form-control" @bind-value="Template.Description">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6"> </div> 
                    <div class="col-md-6">
                        <label><b>Data Inserts</b></label>
                        <div>
                            <FSSelect Items="@DataInsertOptions" BoundValue="@DataInsertDropdownValue" OnSelect="DataInsertSelected"></FSSelect>
                        </div>
                    </div>
                </div>
                <div class="form-group row  px-4">
                    <FSRichTextEditor EditorInstantiated="AssignEditorReference" BoundValue="@Template.HyperText" OnSelect="UpdateHypertext"></FSRichTextEditor>
                </div>
            <div class="modal-footer contact-modal-footer py-2 row">
                <button class="btn btn-sm btn-outline-secondary" @onclick="Cancel">Cancel</button>
                <button class="btn btn-sm btn-primary" @onclick="Save">Save</button>
            </div>
        </div>
    </div>
</div>
