<div style="background-color: white">
    <div class="col-md-12">
        <div style="padding-top:10px;">
            <div class="row mb-2">
                <div class="col-md-11 text-left">
                    <h3 class=" pl-0 my-auto" style="color:var(--primary-blue);">Campaign</h3>
                </div>
                <div class="col-md-1 p-0 text-right">
                    <button class="btn btn-sm btn-transparent" @onclick="BlazoredModal.Cancel">
                        <i class="fa fa-times text-secondary"></i>
                    </button>
                </div>
            </div>
            <hr class="my-2">
                <div class="form-group row">
                    <label class="col-3"><b>Name</b></label>
                    <div class="col-9">
                        <input type="text" class="global-box-height form-control" @bind-value="Campaign.Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-3"><b>Description</b></label>
                    <div class="col-9">
                        <input type="text" class="global-box-height form-control" @bind-value="Campaign.Description">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-3"><b>Email Template</b></label>
                    <div class="col-6">
                        <FSSelect Items="@EmailTemplatesAsFSItems" BoundValue="@Campaign.EmailTemplateOid.ToString()" OnSelect="TemplateOidSelected"></FSSelect>
                    </div>
                    <div class="col-3">
                        <button class="btn btn-sm create-email-btn mb-2 float-right bizhub-cursor-pointer" @onclick="CreateNewTemplate">+ New Template</button>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-3"><b>Recipient Criteria</b></label>
                    <div class="col-6">
                        <FSSelect Items="@EmailRecipientDefinitionsAsFSVisualItems" BoundValue="@Campaign.EmailRecipientDefinitionOid.ToString()" OnSelect="EmailRecipientDefinitionOidSelected"></FSSelect>
                    </div>
                    <div class="col-3">
                        <button class="btn btn-sm create-email-btn mb-2 float-right bizhub-cursor-pointer" @onclick="CreateNewRecipientCriteria">+ New Template</button>
                    </div>
                </div>
            <div class="modal-footer contact-modal-footer py-2 row">
                <button class="btn btn-sm btn-outline-secondary" @onclick="Cancel">Cancel</button>
                <button class="btn btn-sm btn-primary" @onclick="Save">Save</button>
            </div>
        </div>
    </div>
</div>
