<div class="large-modal-content pt-2 pl-0 pr-0 pb-0 overflow-hidden">
    <div class="row mb-1 mx-auto border-bottom border-primary">
        <div class="col-md-11  p-0">
            @*<h3 class=" pl-0 my-auto modal-header-styles">@ModalHeader</h3>
                @if (!string.IsNullOrEmpty(@ModalSubHeader))
                {
                    <small>@ModalSubHeader</small>
                }*@
            <h5 class="font-weight-bold text-left pl-5">Identity</h5>

        </div>
        <div class="col-md-1 p-0">
            <button class="btn btn-sm btn-transparent" @onclick="BlazoredModal.Cancel">
                <i class="fa fa-times text-secondary"></i>
            </button>
        </div>
    </div>
    <div class="p-4">
        <div class="row mx-auto mb-4">
            <div class="col-md-6 col-sm-12">
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">First Name:</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text" @bind-value="@BuyerProfileDTO.FirstName">
                </div>
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">Last Name:</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text" @bind-value="@BuyerProfileDTO.LastName">
                </div>
                <div class="row mx-auto mb-5">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">Email</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="email">
                </div>
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">Address</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text">
                </div>
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right"></label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text">
                </div>
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">City</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text">
                </div>
                <div class="row m-auto">
                    <div class="col-md-8 col-sm-12">
                        <div class="row m-auto">
                            <label class="col-md-6 col-sm-12 font-weight-bold text-right">State</label>
                            <select class="col-md-6 col-sm-12" id="inputState">
                                <option selected=""></option>
                                <option>...</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="row m-auto">
                            <label class="col-md-4 col-sm-12 p-0 font-weight-bold">Zip</label>
                            <input class="col-md-8 col-sm-12" type="text">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="card mx-auto mb-5">
                    <div class="card-header">
                        <div class="row m-auto">
                            <h5 class="col-md-11 text-left">Phone Number</h5>
                            <span class="col-md-1 text-right text-primary pl-2">
                                <i class="fas fa-pencil-alt"></i>
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-1">
                        <div class="row m-auto">
                            <label class="col-md-4 col-sm-12 font-weight-bold text-center">Cell</label>
                            <label class="col-md-6 col-sm-12">(209) 123-1234</label>
                            <span class="col-md-2 col-sm-12 text-success"><i class="fas fa-phone-alt"></i></span>
                        </div>
                        <div class="row m-auto">
                            <label class="col-md-4 col-sm-12 font-weight-bold text-center">Work</label>
                            <label class="col-md-6 col-sm-12">(209) 123-1234</label>
                            <span class="col-md-2 col-sm-12 text-success"><i class="fas fa-phone-alt"></i></span>
                        </div>
                        <div class="row m-auto">
                            <label class="col-md-4 col-sm-12 font-weight-bold text-center">Fax</label>
                            <label class="col-md-6 col-sm-12">(209) 123-1234</label>
                            <span class="col-md-2 col-sm-12 text-success"><i class="fas fa-phone-alt"></i></span>
                        </div>
                    </div>
                </div>
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">Website</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text">
                </div>
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">Facebook</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text">
                </div>
                <div class="row m-auto">
                    <label class="col-md-4 col-sm-12 font-weight-bold text-right">Linked In</label>
                    <input class="col-md-8 col-sm-12 mb-2" type="text">
                </div>
            </div>
        </div>
        <div class="row m-auto">
            <div class="col-md-12 col-sm-12">
                <div class="row m-auto">
                    <label class="col-md-2 col-sm-12 font-weight-bold text-secondary">Reason for Buying</label>
                    <input class="col-md-10 col-sm-12" type="text" @bind-value="@BuyerProfileDTO.FirstName">
                </div>
            </div>
        </div>
    </div>
    <div class="text-right p-4">
        <button class="btn btn-sm btn-success" @onclick="BlazoredModal.Cancel">Cancel</button>
        <button class="btn btn-sm btn-success" @onclick="SaveChanges">Done</button>
    </div>
</div>

