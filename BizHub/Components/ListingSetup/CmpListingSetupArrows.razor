        <div class="col-md-12 arrow-steps clearfix" style="line-height: 1;">
                <div class="col-md-4 p-1 step @(GetStepClass(1)) bizhub-cursor-pointer" @onclick="@(() => ArrowSelected.InvokeAsync(1))">
                    @if (1 < CurrentStep)
                    {
                        <i class="fa fa-check mr-4"></i>
                    }
                    <span>Business Info</span>
                </div>
                <div class="col-md-4 p-1 step @(GetStepClass(2)) bizhub-cursor-pointer" @onclick="@(() => ArrowSelected.InvokeAsync(2))">
                    @if (2 < CurrentStep)
                    {
                        <i class="fa fa-check  mr-4"></i>
                    }
                    <span> Finance</span>
                </div>
                <div class="col-md-4 p-1 step @(GetStepClass(3)) bizhub-cursor-pointer" @onclick="@(() => ArrowSelected.InvokeAsync(3))">
                    @if (3 < CurrentStep)
                    {
                        <i class="fa fa-check mr-4"></i>
                    }
                    <span>Advertisement</span>
                </div>
            </div>
@*     </div> *@
@* </div> *@
