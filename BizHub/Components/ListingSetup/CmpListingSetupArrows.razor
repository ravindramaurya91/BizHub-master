        <button type="button" class="btn btn-primary">Continue</button>
    </div>*@

@code {

    #region Parameters
    [Parameter]
    public Int64 CurrentStep { get; set; }

    [Parameter]
    public EventCallback<Int64> ArrowSelected { get; set; }
    

    #endregion (Parameters)

    #region Methods

    public string GetStepClass(Int64 tiDivNumber)
    {
        string sReturn = "";
        if (tiDivNumber == CurrentStep)
        {
            sReturn = CurrentClass;
        }
        if (tiDivNumber < CurrentStep)
        {
            sReturn = CompleteClass;
        }
        return sReturn;
    }
    #endregion (Methods)

    #region Properties
    public string CompleteClass = "complete";
    public string CurrentClass = "current";
    #endregion (Properties)

}
