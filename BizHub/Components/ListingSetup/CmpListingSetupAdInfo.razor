<div class="row">
    <div class="col-lg-9 mx-auto">
        <div class="business">
            <div class="business-head row m-auto">
                <h2 class="col-md-4">Ad Information</h2>
                <div class="col-md-8 text-right my-auto">
                    <button class="btn btn-sm btn-primary" @onclick="PreviewAd">Preview Ad</button>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right"><b>Create title for you ad &nbsp;<span style="color:#3b70a4">*</span></b></label>
            <div class="col-sm-6">
                <input id="txtAdTitle" type="text" class="@((IsSubmitted) && (String.IsNullOrEmpty(ListingDTO.AdTitle)) ? "invalid-text-error" : "") form-control" @bind="ListingDTO.AdTitle" placeholder="">
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right"></label>
            <div class="col-sm-6">
                @foreach (var item in new string[] { "Allow ad to be seen by the general public", "Only allow ad to be seen by the biz Hub brokers network" }) {
                    <div>
                        <input type="radio" id="@item" value="@item" @onchange="RadioSelection" checked=@(RadioValue.Equals(item)) />
                        <label for="@item">@item</label>
                    </div>
                }
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right"><b>Tag Line &nbsp;<span style="color:#3b70a4">*</span></b></label>
            <div class="col-sm-6">
                <input type="text" id="txtTagLine" class="@((IsSubmitted) && (String.IsNullOrEmpty(ListingDTO.AdTagLine)) ? "invalid-text-error" : "") form-control" @bind="ListingDTO.AdTagLine" placeholder="">
                <div class="title-tag">
                    <p class="text-center">A good Tag Line is 5 - 8 words that describe your industry and hook the buyer</p>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right"><b>Business Opportunity Description &nbsp;<span style="color:#3b70a4">*</span></b></label>
            <div class="col-sm-6">

                <FSRichTextEditor CustomCss="required-box" OnSelect="UpdateBusinessDescription" BoundValue="@ListingDTO.AdDescription"></FSRichTextEditor>

                @* <textarea id="txtDescription" class="@(String.IsNullOrEmpty(ListingDTO.AdDescription) ? "invalid-text-error" : "") form-control busi-opp-desc" @bind="ListingDTO.AdDescription"></textarea> *@
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right mb-1"><b>Upload main photo for the ad</b></label>
            <div class="col-sm-2 mb-1" title="Upload">
                <CmpUploadFile></CmpUploadFile>
            </div>
            <div class="col-sm-4 mb-1">
                <div class="up-img-wrapper text-center">
                    <img src="@ListingDTO.AdPhoto" style="max-height:150px;">
                </div>
            </div>
        </div>
        
        <div class="business">
            <div class="business-head row m-auto">
                <h2 class="col-md-4">Detailed Information</h2>
                <div class="col-md-8 text-right my-auto">
                    <button class="btn btn-sm btn-primary" @onclick="PreviewAd">Preview Ad</button>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right"><b>Facility Description</b></label>
            <div class="col-sm-6">
                <textarea class="form-control speciality" @bind="@ListingDTO.AdFacilityDescription"></textarea>
            </div>
            <div class="col-sm-3">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right"><b>Reason For Selling</b></label>
            <div class="col-sm-6">
                <input type="text" class="form-control height-30" placeholder="" @bind-value="ListingDTO.AdReasonForSelling">
            </div>
            <div class="col-sm-2">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label text-right"><b>Support & Training</b></label>
            <div class="col-sm-6">
                <input type="text" class="form-control height-30" placeholder="" @bind-value="ListingDTO.AdSupportAndTraining">
            </div>
            <div class="col-sm-2">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 mb-1 col-form-label text-right"><b>Upload Additional photo and create a photo gallery</b></label>
            <div class="col-sm-2 mb-1">
                <a class="btn-img-upload">Upload</a>

            </div>
            <div class="col-sm-4 mb-1">
                <div class="img-photo-gallery text-center">
                    <img src="/images/companyLogo.png" class="img-fluid img-thumbnail">
                    <img src="/images/companyLogo.png" class="img-fluid img-thumbnail">
                    <img src="/images/companyLogo.png" class="img-fluid img-thumbnail">
                    <img src="/images/companyLogo.png" class="img-fluid img-thumbnail">
                </div>
            </div>
        </div>

        @*<div class="form-group row">
            <label class="col-md-3 offset-1"><span class="float-right mt-1">Create a landing page?</span></label>
            @foreach (var item in new string[] { "yes", "no" })
            {
                <div class="radio mr-3">
                    <input type="radio" id="@item" value="@item" @onchange="LandingPageSelection" checked=@(LandingPage.Equals(item)) />
                    <label for="@item">@item</label>
                </div>
            }
        </div>*@

    </div>
</div>

