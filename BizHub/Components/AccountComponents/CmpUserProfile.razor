<div class="profie-blogs">
    <div class="tab-content" id="nav-tabContent">
        <div id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
            <div class="pr-2">
                <div class="profile-contact-sections">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="img-wrap"> 
                                <div class="img-wrap-above">
                                    @*<img src="@UserProfileDTO.Avatar" >*@
                                    @* <div class="col-md-1 p-0 avatar-container"> *@
                                    <img class="profile-avatar mb-0" src="@UserProfileDTO.Avatar">
                                    @* <div class="middle"> *@
                                    @*     <div class="text"> *@
                                    @*         +Click To Change Avatar *@
                                    @*     </div> *@
                                    @* </div> *@
                                    @* </div> *@
                                    @* <a class="choose-pic"><i class="fas fa-camera" id="openFileDialog"></i><InputFile OnChange="HandleFileSelected" style="display: none;" type="file" id="userImage" accept="image/png,image/jpg,image/jpeg" /></a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row pl-1">
                        <span class="bizhub-cursor-pointer upload-avatar-text">
                            <a><i class="fas fa-camera"></i> Change Avatar Image
                            <InputFile OnChange="HandleFileSelected" style="display: none;" type="file" id="userImage" accept="image/png,image/jpg,image/jpeg" /></a>
                        </span>
                    </div>
                    <!--start-->
                    <div class="row">
                        <CmpUserProfileContact UserProfileDTO="UserProfileDTO"/>
                        <CmpUserProfileWebPresence Urls="UserProfileDTO.Urls"/>
                    </div>
                    <!--end-->
                    <!--start-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contact-user-info pt-0">
                                <div class="headingthree">
                                    <h3 class="pb-2">About Me</h3>
                                </div>
                                <div class="col-lg-5 col-sm-12">
                                    <div class="contact-user-info">
                                        <form>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label"><b>Areas Served</b></label>
                                                    <div class="col-sm-9">
                                                        <input type="text" class="global-box-height form-control" @bind="@UserProfileDTO.AreasServed" placeholder="Modesto, CA">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label"><b>Licensed In</b></label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="global-box-height form-control" @bind="@UserProfileDTO.LicensedIn" placeholder="California">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <span style="height:150px; width: 100%;">
                                    <FSRichTextEditor OnSelect="UpdateAboutMe" BoundValue="@UserProfileDTO.AboutMe"></FSRichTextEditor>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9 col-sm-7">
                            <div class="btn-se">
                                <button class="btn btn-primary btn-sm" @onclick="PreviewProfile">Preview Your Profile</button>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-5 text-right">
                            <div class="btn-section">
                                <button class="btn btn-sm btn-secondary" @onclick="Cancel">Cancel</button>
                                <button class="btn btn-sm btn-success" @onclick="SaveProfileDTO">Save</button>
                            </div>
                        </div>
                    </div>
                    <!--end-->
                </div>
            </div>
        </div>
    </div>
</div>
