<div class="col-md-7">
    <div class="contact-user-info">
        <div class="row">
            <div class="col-md-12 pb-4">
                <div class="row">
                    <h4 class="mb-0 col-md-6" style="color: #4678aa;">Web Presence</h4>
                    <div class="col-md-6 text-right">
                        <button @onclick="@(() => AddUrl())" class="btn-secondary btn btn-sm m-0" style="background: transparent; border: 1px solid #4678aa; color: black;">
                            <i class="fa fa-plus" style="color:green"></i> Add
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body pb-2 pt-0 px-0">
                        <div class="card-intro py-1">
                            <p class="mb-0" style="font-size: 14px;">
                                Add your web links (Facebook, Linked In etc).  You can click the <i class="fas fa-link"></i> icon to test your links.
                            </p>
                        </div>
                        @foreach (NameValuePair Url in Urls) {
                            if (!Url.DeleteMe) {
                                <div class="row mb-1 mt-0 mx-auto">
                                    <label class="col-md-1 p-0 text-center col-form-label"><b>Name</b></label>
                                    <input type="text" class="global-box-height form-control col-md-2" name="" @bind-value="Url.Name">
                                    <label class="col-md-1 pr-0 pl-2 pt-0 col-form-label"><b>URL</b></label>
                                    <input type="text" class="global-box-height form-control col-md-6" name="" @bind-value="Url.Value">
                                    <div class="col-md-1 text-right pl-0">
                                        <a href="@Url.Value" target="_blank">
                                            <button class="btn btn-sm btn-outline-secondary" >
                                                <i class="fas fa-link"></i>
                                            </button>
                                        </a>
                                    </div>
                                    <div class="col-md-1 text-right pl-0">
                                        <button class="btn btn-sm btn-outline-danger remove-btn" @onclick="@(() => RemoveUrl(Url))">
                                            <i class="fa fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
