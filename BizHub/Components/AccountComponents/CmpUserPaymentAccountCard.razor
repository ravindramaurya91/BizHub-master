@code {

    #region properties
    public bool isShowBillingAddress { get; set; }
    public bool isShowCardInfo { get; set; }
    public bool isShowAccountCard { get; set; }
    #endregion

    #region parameter
    [Parameter]
    public EventCallback ShowHideChargeHistory { get; set; }
    #endregion

    #region  Methods

    public void ShowHideAccountCard()
    {
        if (isShowAccountCard)
        {
            isShowAccountCard = false;
            isShowCardInfo = false;
            isShowBillingAddress = false;
        }
        else
        {
            isShowAccountCard = true;
            isShowBillingAddress = true;
            isShowCardInfo = false;

        }
    }

    public void EditCardInfo()
    {
        isShowBillingAddress = false;
        isShowCardInfo = true;
    }

    public void SaveOrCancelCardInfo()
    {
        isShowBillingAddress = true;
        isShowCardInfo = false;
    }
    #endregion
}
