@using Model;

<div class="container mb-3">
    <div class="row">
        <div class="col-md-2 pl-0">
            <img style="max-width: 100%;" class="img-fluid d-block col-md-3 px-0 listing-image-outlines" src="/images/truckCompany.jpg">
        </div>
        <div class="col-md-8 pr-0">
            <div class="row">
                <div class="col-md-12">
                    <h4 class="global-blue-text" style="font-weight:400;">@Listing.AdTitle</h4>
                </div>
                <div class="col-md-5">
                    <h5 class="global-green-text font-family-helvetica global-overflow-hidden mb-0">@Listing.AdTagLine</h5>
                    <label style="color:gray;">@CityState</label>
                </div>
                <div class="col-md-2 p-0">
                    <label class="col-md-12 mb-0 listing-highlights p-0 text-right">Revenue</label>
                    <p class="col-md-12 px-0 text-right">$@Convert.ToDecimal(@Listing.GrossRevenue).ToString(Constants.SHORT_CURRENCY)</p>
                </div>
                <div class="col-md-3 pl-0">
                    <label class="col-md-12 mb-0 listing-highlights p-0 text-right">Cash Flow</label>
                    <p class="col-md-12 px-0 text-right">$@Convert.ToDecimal(@Listing.CashFlow).ToString(Constants.SHORT_CURRENCY)</p>
                </div>
                @if (Listing.IsSellerFinanace == true){
                    <div class="col-md-2 text-right">
                        <small class="col-md-12 p-0">
                            <i class="fa fa-check global-green-text"></i> Seller Finance
                        </small>
                        <small class="col-md-12 p-0">
                            <i class="fa fa-check global-green-text"></i> Seller Finance
                        </small>
                    </div>
                }
            </div>
            @* <div class="row"> *@
            @*     <div class="col-md-12"> *@
            @*         <p style=" -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; display: -webkit-box;">@Listing.AdDescription</p> *@
            @*     </div> *@
            @* </div> *@
        </div>
        <div class="col-md-2">
            <div class="row">
                <h4 class="global-blue-text bizhub-align-center col-md-8 pr-0" style="font-weight: 400">$@Convert.ToDecimal(@Listing.ListingPrice).ToString(Constants.SHORT_CURRENCY)</h4>
                <i class="fas fa-heart global-heart-size heart-red col-md-4 pl-0 mt-1 bizhub-cursor-pointer" style="text-align: right;"></i>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-md global-green-button col-md-12 py-1" style="color: white;">Contact Seller</button>
                </div>
            </div>
            <div class="row">
                <small style="font-size: 14px;" class="col-md-12"> Date Listed:
                    <strong style="text-decoration: underline;">@Listing.ListingDate.ToShortDateString()</strong>
                </small>
                @* <small style="font-size: 13px;" class="col-md-12">Contacted on: *@
                @*     <strong style="text-decoration: underline;">02/22/20</strong> *@
                @* </small> *@
            </div>
@*             <div class="row"> *@
@*                 @if (Listing.IsSellerFinanace == true){ *@
@*                     <div class="col-md-12"> *@
@*                         <small class="col-md-12 p-0"> *@
@*                             <i class="fa fa-check global-green-text"></i> Seller Finance *@
@*                         </small> *@
@*                     </div> *@
@*                 } *@
@*             </div> *@
        </div>
    </div>
    <hr class="my-1">
</div>

@code {

    [Parameter]
    public Listing Listing { get; set; }

    public string CityState {
        get {
            return Listing.City + ", " + Listing.State;
        }
    }

    

}
