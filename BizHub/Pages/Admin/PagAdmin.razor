@page "/Admin-Setup"
@page "/Admin-Setup/{CurrentMenu:long}"

@using BizHub.Components.Admin;

<div class="container-fluid">
    <div class="row">
        <AuthorizeView>
            <Authorized>
                <SfSplitter Height="100%" Width="100%">
                    <SplitterPanes>
                        <SplitterPane Size="300px">
                            <ContentTemplate>
                                <div class="col-md-12 p-0">
                                    <CmpAdminMenu ActiveMenu="CurrentMenu" MenuItemSelected="SelectMenuItem"/>
                                </div>
                            </ContentTemplate>
                        </SplitterPane>
                        <SplitterPane>
                            <ContentTemplate>
                                <div class="col-md-12 pr-0">
                                    @if (CurrentMenu == 1)
                                    {<CmpLookupDefinition Controller="Controller"/>}
                                    @if (CurrentMenu == 2)
                                    {<CmpLookup Controller="Controller"/>}
                                    @*@if (CurrentMenu == 3) {<CmpRecipientListGrid Controller="Controller" />}*@
                                </div>
                            </ContentTemplate>
                        </SplitterPane>
                    </SplitterPanes>
                </SfSplitter>
            </Authorized>
            <NotAuthorized>
                You must log in to see this content
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>